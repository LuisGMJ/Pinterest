<p id="notice"><%= notice %></p>
<div class="container">
  <center><h1>Listing Pins</h1></center>
   <div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 190 }'>

      <% @pins.each do |pin| %>
         <div class="grid-item" style="width: 25%" >
           <div class="thumbnail">
             <p class="text-danger"> <%= pin.name %> </p>
             <%= image_tag(pin.photo, :class => 'img-responsive') %>
             <p class="text-info"><%= pin.description %></p>

             <div class="buttons" style="margin-top: 10px; margin-bottom: 10px">
              <%= link_to 'Show', pin, :class => 'btn '  %>
              <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn' %>
               <% if user_signed_in? %>
                 <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' },
                    :class => 'btn'%>
               <% end %>
             </div>
           </div>
         </div>
      <% end %>
     <br>
     <% if user_signed_in? %>
      <%= link_to 'New Pin', new_pin_path %>
     <% end %>
   </div>
</div>